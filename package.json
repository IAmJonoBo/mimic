{
  "name": "mimic",
  "version": "0.1.1",
  "type": "module",
  "private": true,
  "description": "Design-token-driven pipeline using 100% libre tooling",
  "repository": {
    "type": "git",
    "url": "https://github.com/IAmJonoBo/mimic.git"
  },
  "license": "MIT",
  "author": "Mimic Team",
  "workspaces": [
    "packages/*",
    "apps/*",
    "tools/*"
  ],
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.17.1"
  },
  "scripts": {
    "build": "nx run-many -t build && pnpm run postbuild:clean",
    "build:affected": "nx affected -t build && pnpm run postbuild:clean",
    "postbuild:clean": "pnpm run clean:apple",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "lint:packages": "nx run-many -t lint -p design-tokens,design-system,shared-utils",
    "lint:base": "nx run workspace-format:lint:base",
    "lint:typed": "nx run workspace-format:lint",
    "lint:workspace": "pnpm run lint:base && pnpm run lint:typed",
    "lint:affected": "nx affected -t lint",
    "lint:css": "stylelint 'packages/**/*.{css,scss,sass}' --fix",
    "lint:md": "markdownlint-cli2 --config config.markdownlint-cli2.jsonc --fix \"docs/**/*.md\" \"packages/*/README.md\"",
    "lint:md:fix": "node scripts/fix-markdown-line-length.js && pnpm lint:md",
    "lint:md:fix-line-length": "node scripts/fix-markdown-line-length.js",
    "lint:commits": "commitlint --from=HEAD~1 --to=HEAD",
    "e2e": "nx run-many -t e2e",
    "dev": "nx run-many -t serve --parallel=10",
    "clean": "nx reset && rm -rf node_modules && pnpm install",
    "clean:apple": "node tools/apple-cleaner.js",
    "clean:apple:staged": "node tools/apple-cleaner.js --mode=staged",
    "check:apple": "node tools/apple-cleaner.js --mode=check",
    "clean:ds-store": "find . -name '.DS_Store' -type f -delete && find . -name '._*' -type f -delete",
    "clean:xcode": "find . -name '*.xcuserdata*' -type d -exec rm -rf {} + 2>/dev/null || true; find . -name 'xcuserdata' -type d -exec rm -rf {} + 2>/dev/null || true; find . -name '*.xcworkspace/xcuserdata' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:apple-logs": "find . -name '*.crash' -type f -delete 2>/dev/null || true; find . -name '*.crashlog' -type f -delete 2>/dev/null || true; find . -name '*.diag' -type f -delete 2>/dev/null || true",
    "clean:spotlight": "find . -name '.Spotlight-V100' -type d -exec rm -rf {} + 2>/dev/null || true; find . -name '.fseventsd' -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:temp": "find . -name '*.tmp' -type f -delete 2>/dev/null || true; find . -name 'Thumbs.db' -type f -delete 2>/dev/null || true; find . -name '~*' -type f -delete 2>/dev/null || true",
    "clean:all": "pnpm run clean:apple && pnpm run clean:temp && pnpm run clean",
    "clean:workspace": "nx run-many -t clean",
    "clean:apple:workspace": "nx run-many -t clean:apple",
    "precommit:clean": "pnpm run clean:apple:staged",
    "autofix": "./scripts/autofix.sh",
    "autofix:safe": "./scripts/autofix.sh",
    "format": "nx run workspace-format:format",
    "format:check": "nx run workspace-format:format --configuration=check",
    "typecheck": "nx run-many -t typecheck",
    "visual-test": "nx run-many -t visual-test",
    "storybook": "nx run design-system:storybook",
    "build-storybook": "nx run design-system:build-storybook",
    "tokens:build": "nx run design-tokens:build",
    "tokens:build-all": "nx run design-tokens:build && nx run-many -t build",
    "tokens:sync": "nx run design-tokens:tokens:sync",
    "tokens:sync-all": "nx run design-tokens:tokens:sync && nx run-many -t build --skip-nx-cache",
    "tokens:watch": "nx run design-tokens:watch",
    "tokens:validate": "node -e \"const { runTokenContractValidation } = require('./packages/shared-utils/dist/token-contract-validation.js'); runTokenContractValidation();\"",
    "tokens:check-drift": "echo 'üîç Checking for token drift...' && echo 'Drift check placeholder - would compare with Penpot'",
    "tokens:diff": "echo 'üìä Token diff placeholder - would show changes between versions'",
    "tokens:monitor": "echo 'üëÄ Token monitoring placeholder - would start continuous monitoring'",
    "tokens:cli:help": "echo 'üìã Install mimic-token-cli globally: npm install -g mimic-token-cli'",
    "tokens:cli:status": "echo 'üìã Use: mimic-tokens status (install globally: npm install -g mimic-token-cli)'",
    "validate:token-contract": "pnpm tokens:validate",
    "validate:penpot-export": "node -e \"console.log('üîç Validating Penpot export...'); if (!require('fs').existsSync('tokens.json')) { console.log('‚ùå tokens.json not found'); process.exit(1); } console.log('‚úÖ Penpot export validated');\"",
    "dev:full-stack": "concurrently 'nx run design-tokens:watch' 'nx run design-system:storybook'",
    "dev:all": "concurrently -n tokens,storybook,web 'pnpm tokens:watch' 'pnpm storybook' 'nx run web:serve'",
    "test:e2e": "nx run-many -t e2e",
    "test:visual": "chromatic --exit-zero-on-changes",
    "prepare": "husky",
    "graph": "nx graph",
    "graph:affected": "nx affected:graph",
    "affected": "nx affected",
    "dep-graph": "nx dep-graph",
    "report": "nx report",
    "reset": "nx reset",
    "repair": "nx repair",
    "connect": "nx connect",
    "watch": "nx watch --all -- nx build",
    "dev:runner": "node tools/dev-runner.js",
    "setup:dx": "./scripts/setup-dx.sh",
    "setup:complete": "pnpm install && pnpm clean:apple && pnpm build",
    "workspace:info": "nx report && nx graph --file=tmp/workspace-graph.json",
    "analyze": "pnpm build && pnpm workspace:info",
    "upgrade:plan": "nx migrate latest",
    "upgrade:latest": "pnpm up --latest --recursive --workspace-root",
    "upgrade:verify": "pnpm install && pnpm nx run-many -t build,test,lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/config-nx-scopes": "20.0.0",
    "@eslint/js": "9.37.0",
    "@nx/cypress": "21.6.4",
    "@nx/esbuild": "21.6.4",
    "@nx/eslint": "21.6.4",
    "@nx/eslint-plugin": "21.6.4",
    "@nx/jest": "21.6.4",
    "@nx/js": "21.6.4",
    "@nx/node": "21.6.4",
    "@nx/plugin": "21.6.4",
    "@nx/react": "21.6.4",
    "@nx/storybook": "21.6.4",
    "@nx/vite": "21.6.4",
    "@nx/webpack": "21.6.4",
    "@nx/workspace": "21.6.4",
    "@storybook/addon-a11y": "9.1.10",
    "@storybook/addon-measure": "9.0.8",
    "@storybook/addon-outline": "9.0.8",
    "@types/jest": "30.0.0",
    "@types/node": "24.7.1",
    "@types/testing-library__jest-dom": "6.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "chromatic": "13.3.0",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "cypress": "15.4.0",
    "dprint": "0.50.2",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "glob": "11.0.3",
    "husky": "9.1.7",
    "jiti": "2.6.1",
    "jsdom": "27.0.0",
    "lint-staged": "16.2.4",
    "markdownlint-cli2": "0.18.1",
    "npm-run-all2": "8.0.4",
    "nx": "21.6.4",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "rimraf": "6.0.1",
    "stylelint": "16.25.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-config-tailwindcss": "1.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.0",
    "vitest": "3.2.4",
    "wait-on": "9.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome format --write",
      "biome check --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{html,astro}": [
      "prettier --write"
    ],
    "*.{css,scss,sass}": [
      "stylelint --fix"
    ],
    "*.{md,mdx}": [
      "node scripts/fix-markdown-line-length.js",
      "markdownlint-cli2 --config config.markdownlint-cli2.jsonc --fix"
    ],
    "*.{toml,yaml,yml,xml}": [
      "dprint fmt --stdin {}"
    ],
    ".github/instructions/nx.instructions.md": "skip"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "esbuild@<=0.24.2": ">=0.25.5",
      "koa@<2.16.1": ">=3.0.0"
    },
    "onlyBuiltDependencies": [
      "@bundled-es-modules/glob",
      "@swc/core",
      "aws-sdk",
      "dprint",
      "esbuild",
      "nx",
      "sharp",
      "style-dictionary"
    ]
  },
  "dependencies": {
    "@vanilla-extract/css": "1.17.4",
    "@vanilla-extract/vite-plugin": "5.1.1",
    "storybook": "9.1.10"
  }
}
