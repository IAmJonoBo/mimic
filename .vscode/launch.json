{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸš€ Debug Design System",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/nx",
      "args": ["serve", "design-system"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ðŸ§ª Debug Tests",
      "type": "node",
