{
  "name": "workspace-format",
  "targets": {
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome format --write .",
        "parallel": false
      },
      "configurations": {
        "check": {
          "command": "biome format --check ."
        },
        "affected": {
          "command": "biome format --write --files {files}"
        }
      }
    },
    "lint:base": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome lint .",
        "parallel": false
      },
      "configurations": {
        "apply": {
          "command": "biome lint --write ."
        },
        "affected": {
          "command": "biome lint --files {files}"
        }
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/biome.json"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": [
          "apps/docs/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "apps/workflows/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "apps/examples/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "packages/token-*/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "packages/tokens-*/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "packages/ui-*/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "packages/platform-bridges/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}",
          "tools/**/*.{js,jsx,ts,tsx,mjs,cjs,cts,mts}"
        ]
      }
    },
    "lint:md": {
      "executor": "nx:run-commands",
      "options": {
        "command": "markdownlint-cli2 --fix",
        "parallel": false
      },
      "configurations": {
        "check": {
          "command": "markdownlint-cli2"
        },
        "affected": {
          "command": "markdownlint-cli2 --fix {files}"
        }
      },
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.markdownlint-cli2.yaml"]
    }
  },
  "tags": ["format", "tooling", "dx"]
}
