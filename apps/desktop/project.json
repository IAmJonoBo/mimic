{
  "name": "desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop/src",
  "projectType": "application",
  "targets": {
    "tauri": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @mimic/desktop tauri dev"
      },
      "configurations": {
        "dev": {
          "command": "pnpm --filter @mimic/desktop tauri dev"
        },
        "build": {
          "command": "if [ \"${TAURI_ENABLE_BUILD:-true}\" = \"true\" ]; then pnpm --filter @mimic/desktop tauri build; else echo 'ℹ️ TAURI_ENABLE_BUILD set to false; skipping desktop build'; fi"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @mimic/desktop tauri dev"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ \"${TAURI_ENABLE_BUILD:-true}\" = \"true\" ]; then pnpm --filter @mimic/desktop tauri build; else echo 'ℹ️ TAURI_ENABLE_BUILD set to false; skipping desktop build'; fi"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm --filter @mimic/desktop tauri dev"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "apps/desktop"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "apps/desktop"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/desktop/src/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": ["scope:desktop", "type:app", "platform:tauri"]
}
