{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "../",
    "paths": {
      "@mimic/design-system": ["./packages/design-system/src"],
      "@mimic/design-tokens": ["./packages/design-tokens/src"],
      "@mimic/shared-utils": ["./packages/shared-utils/src"],
      "@mimic/tokens-core": ["./packages/tokens-core/src"],
      "@mimic/ui-kernel": ["./packages/ui-kernel/src"],
      "@mimic/ui-adapters": ["./packages/ui-adapters/src"],
      "@mimic/platform-bridges": ["./packages/platform-bridges/src"]
    }
  }
}
